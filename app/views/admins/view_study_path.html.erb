<body class="fixed-nav bg-dark" id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
      <a class="navbar-brand" href="/dashboard">Study Path Tracking System</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
    </nav>
    <div class="container-fluid">
      <div class ="content_wrapper bg-light">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/admin/dashboard">Admin</a>
          </li>
          <li class="breadcrumb-item active">Update Subjects</li>
        </ol>
        <div class="card-body">
           <h3 class="text-primary">Existing Study Paths</h3>
           <br>
           <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <% if @study_path_courses.length > 0 %>
                        <thead class="thead-light">
                          <tr>
                            <th>Study Paths Available</th>
                            <th></th>
                          </tr>
                        </thead>
                       <% @study_path_courses.each do |content| %>
                          <tbody>
                            <tr>
                              <td><%= content[:degree].name %></td>
                              <td>
                                <% if @is_remove %>
                                    <%= link_to "/admin/#{content[:study_path_id]}/delete_certain_study_path" do %>
                                      <i class="fa fa-fw fa-trash"></i> Remove Study Path
                                     <%end%>
                                <% else %>
                                     <%= link_to "/admins/#{content[:study_path_id]}" do %>
                                      <i class="fa fa-fw fa-eye"></i> View Study Path
                                     <%end%>
                                <% end %>
                              </td>
                            </tr>
                          </tbody>
                      <% end %>
                     <% else %>
                        <thead class="thead-light">
                          <tr>
                            <th>NO Study Path Available</th>
                            <th></th>
                          </tr>
                        </thead>
                    <% end %>
                </table>
           </div>
        </div>
     </div>
  </div> 
</body>